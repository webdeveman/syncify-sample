<div class="py-6" style="background-color: {{ section.settings.background }}; color: {{ section.settings.textColor }};">
  <div class="flex flex-col items-center justify-center text-center pb-5">
    <p class="font-bold font-chronicle text-3xl">{{ section.settings.title }}</p>
    <a href="{{ section.settings.collection.url }}">
      {{ section.settings.cta }}
    </a>
  </div>

  <div class="w-full">
    {% capture slides %}
      {% for i in (0..10) %}
        <div class="embla-slide md:w-[15.333%] w-1/3 mr-5 h-20 bg-accent [&.edge]:opacity-50">{{ i }}</div>
      {% endfor %}
    {% endcapture %}

    {% render 'embla-carousel' 
     with slides: slides,
     loop: true,
     align: 'start',
     startIndex: 2,
     dragFree: true,
     highlight: true %}

  </div>
</div>

{% schema %}
  {
    "name": "Product(s) Carousel",
    "class": "w-full",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "Product(s) Carousel"
      },
      {
        "type": "textarea",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "cta",
        "label": "Call To Action"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }, {
        "type": "header",
        "content": "Colors"
      }, {
        "type": "color",
        "id": "background",
        "label": "Background"
      }, {
        "type": "color",
        "id": "textColor",
        "label": "Text Color"
      }
    ],
    "presets": [
      {
        "name": "Product(s) Carousel"
      }
    ]
  }
{% endschema %}