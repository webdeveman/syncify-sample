{% # Theme CSS Variables %}
<style>
  html {
    --pageBg: {{ settings.page_background }}
    ;
    --primaryColor: {{ settings.primary_color }}
    ;
    --accentOne: {{ settings.accent_color_1 }}
    ;
    --accentTwo: {{ settings.accent_color_2 }}
    ;
  }

  main {
    background-color: var(--pageBg);
  }
</style>

{% # STYLESHEET PRELOADS %}
<link
  as="style"
  crossorigin
  href="{{ 'stylesheet.min.css' | asset_url }}"
  rel="stylesheet preload">

<link
  as="style"
  crossorigin
  href="{{ 'tailwind.css' | asset_url }}"
  rel="stylesheet preload">


<link href="{{ 'stylesheet.min.css' | asset_url }}" rel="stylesheet">
<link href="{{ 'tailwind.css' | asset_url }}" rel="stylesheet">