{% comment %} Shopify Design mode (Customize Theme Screen) {% endcomment %}
<script>
  document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
  if (Shopify.designMode) {
    document.documentElement.classList.add('shopify-design-mode');
  }
</script>

{% # SCRIPT PRELOADS %}
<link
  as="script"
  crossorigin
  href="{{ 'theme.min.js' | asset_url -}}"
  rel="preload">

<script
  src="{{ 'theme.min.js' | asset_url }}"
  data-spx-eval="false"
  defer></script>

<link
  as="script"
  crossorigin
  href="{{ 'bundle.min.js' | asset_url -}}"
  rel="preload">

<script
  src="{{ 'bundle.min.js' | asset_url }}"
  data-spx-eval="false"
  type="module"
  defer>
  app();
</script>